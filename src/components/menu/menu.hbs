<div class="inv-menu {{ ternary menu.open "inv-menu--open" "" }}">
  <div class="inv-menu__content">

    {{#if menu.logo}}
      <img
        class="inv-menu__logo {{ ternary menu.open "inv-menu__logo--open" "" }}"
        src="{{ ternary menu.open "/assets/images/logo_full.png" "/assets/images/logo.png" }}"
        alt="Logo"
      />
    {{/if}}

    <div class="inv-menu__list">
      {{#if menu.search}}
        {{> @form-field}}
        {{> @label}}
      {{/if}}
      {{#if menu.list}}
        {{#each menu.list as |icon|}}
          <i class="material-icons inv-menu__list-item">{{ icon }}</i>
        {{/each}}
      {{/if}}
    </div>

    {{#if menu.brand-logo}}
      <img
        class="inv-menu__brand-logo {{ ternary menu.open "inv-menu__brand-logo--open" "" }}"
        src="{{ ternary menu.open "/assets/images/brand-logo.png" "/assets/images/brand-logo-small.png" }}"
        alt="Logo"
      />
    {{/if}}
  </div>
</div>
