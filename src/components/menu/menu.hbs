<div class="inv-menu {{ menu.modifier }}">
  {{> @menu-expand-button}}
  <div class="inv-menu__container {{ ternary menu.open "inv-menu__container--open" "" }}">

    <div class="inv-menu-header">
      {{> @menu-collapse-button}}
      <picture>
        <source
          media="(min-width: 500px)"
          srcset="https://raw.githubusercontent.com/involvestecnologia/violin.css/master/public/assets/images/logo.png"
        >
        <img
          src="https://raw.githubusercontent.com/involvestecnologia/violin.css/master/public/assets/images/logo-full.png"
          alt="{{ menu-logo.alt }}"
        />
      </picture>
    </div>

    <div class="inv-menu__search">
      {{> @menu-search--default }}
      <div class="inv-menu__search-tip">Ctrl+k</div>
    </div>

    <div class="inv-menu__list">
      {{#if menu.categorie}}
        {{> @menu-list-categorie }}
      {{else}}
        {{> @menu-list--open }}
      {{/if}}
    </div>

    <picture class="inv-menu__brand">
      <source
        media="(min-width: 500px)"
        srcset="https://raw.githubusercontent.com/involvestecnologia/violin.css/master/public/assets/images/brand.png"
      >
      <img
        src="https://raw.githubusercontent.com/involvestecnologia/violin.css/master/public/assets/images/brand-full.png"
        alt="{{ menu-logo.alt }}"
      />
    </picture>

  </div>
</div>
